{
  "name": "windsurf-stats-api",
  "version": "1.0.0",
  "description": "Standalone API server for windsurf statistics data",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop windsurf-api",
    "pm2:restart": "pm2 restart windsurf-api"
  },
  "dependencies": {
    "express": "^4.19.2",
    "mysql2": "^3.14.2",
    "cors": "^2.8.5",
    "helmet": "^8.0.0",
    "express-rate-limit": "^7.4.1",
    "compression": "^1.7.5",
    "dotenv": "^16.4.7"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/node": "^20.17.6",
    "typescript": "^5.7.2",
    "ts-node-dev": "^2.0.0"
  },
  "keywords": ["windsurf", "statistics", "api", "mysql"],
  "author": "Windsurf Stats Team",
  "license": "MIT"
}